---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

import { Image } from "astro:assets";
import Hal from "../images/hal-right.png";

import Title from "./Title.astro";
import SearchBar from "../components/SearchBar.astro";
---

<header class="p-3 bg-gradient-to-br from-yellow-500 to-yellow-200">
  <nav class="flex p-4">
    <div class="max-w-xl mx-auto">
      <i class="icon">
        <a href="/" title="olavea.com">
          <Image
            class="rounded-full"
            src={Hal}
            alt="A logo sitting on a nest of eggs."
          />
        </a>
      </i>
    </div>

    <div class="internal-links max-w-xl mx-auto font-bold">
      <div class="p-1">
        <HeaderLink
          class="underline-offset-3 hover:underline font-bold"
          href="/about"
          >About
        </HeaderLink>
        <HeaderLink
          class="underline-offset-3 hover:underline text-blue-600 font-bold"
          href="/blog">Anti-Addiction</HeaderLink
        >
        <HeaderLink
          class="underline-offset-3 hover:underline text-green-600 font-bold"
          href="/">{SITE_TITLE}</HeaderLink
        >
      </div>
      <div class="py-2">
        <SearchBar
          label="Search Loot"
          placeholder="Search Loot"
          class="mx-auto max-w-lg"
        />
      </div>
    </div>
  </nav>
</header>
