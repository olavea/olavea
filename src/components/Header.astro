---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

import { Image } from "astro:assets";
import Hal from "../images/hal-right.png";

import Title from "./Title.astro";
import SearchBar from "../components/SearchBar.astro";
---

<header class="p-3 bg-gradient-to-br from-yellow-500 to-yellow-200">
  <nav class="flex p-4">
    <div class="max-w-xl mx-auto">
      <i class="icon">
        <a href="/" title="olavea.com">
          <Image
            class="rounded-full border-4 border-orange-500 py-0.25"
            src={Hal}
            alt="A logo sitting on a nest of eggs."
          />
        </a>
      </i>
    </div>

    <div class="internal-links max-w-xl mx-auto font-bold">
      <div class="p-1">
        <HeaderLink
          class="underline-offset-3 hover:underline text-red-600 font-black"
          href="/blog">
            <div>
              <span
                class="font-black text-transparent
                  bg-clip-text bg-gradient-to-r
                  from-pink-300 to-orange-600
                  dark:from-pink-300 dark:to-orange-600"
              >
                Anti-
              </span>
              <span
                class="font-black text-transparent
                  bg-clip-text bg-gradient-to-r
                  from-orange-600 to-green-500
                  dark:from-orange-600 dark:to-green-500"
              >
                Addict
              </span>
              <span
                class="font-black text-transparent
                  bg-clip-text bg-gradient-to-r
                  from-green-500 to-blue-400
                  dark:from-green-500 dark:to-blue-400"
              >
                ion
              </span>
            </div>  
          </HeaderLink
        >

        <HeaderLink
          class="underline-offset-3 hover:underline font-black"
          href="/">{SITE_TITLE}</HeaderLink
        >

        <HeaderLink
          class="underline-offset-3 hover:underline font-black"
          href="/about">
          <div>  
            <span
              class="font-black text-transparent
                bg-clip-text bg-gradient-to-l
                from-green-500 to-blue-400
                dark:from-pink-400 dark:to-orange-600"
            >
              Skill-
            </span>
            <span
              class="font-black text-transparent
                  bg-clip-text bg-gradient-to-l
                  from-pink-300 to-orange-600
                  dark:from-yellow-400 dark:to-green-500"
              >
                Building
            </span>
          </div>  
        </HeaderLink>


      </div>
      <div class="py-2">
        <SearchBar
          label="Search Loot"
          placeholder="Search Loot"
          class="mx-auto max-w-lg"
        />
      </div>
    </div>
  </nav>
</header>
