---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { Image } from "astro:assets";
import Hal from "../images/hal.png";
import SearchBar from "../components/SearchBar.astro";
---

<header class="p-3 bg-gradient-to-br from-yellow-500 to-yellow-200">
  <nav class="flex p-4">
    <div class="max-w-xl mx-auto">
      <i class="icon">
        <a href="/" title="olavea.com">
          <Image src={Hal} alt="A logo sitting on a nest of eggs." />
        </a>
      </i>
    </div>

    <div class="internal-links max-w-xl mx-auto hover:underline font-bold">
      <HeaderLink href="/about">About Us</HeaderLink>
      <HeaderLink href="/blog">Anti-Addiction</HeaderLink>
      <HeaderLink href="/">{SITE_TITLE}</HeaderLink>
      <SearchBar
        label="Search Loot"
        placeholder="Search Loot"
        class="mx-auto max-w-lg"
      />
    </div>
  </nav>
</header>
